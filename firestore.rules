
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /materials/{materialId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    match /shoppingLists/{userId} {
      // Allow anyone to read and update, which enables the public page functionality.
      allow read, update: if true; 
      // Only the authenticated owner can create or delete their entire list.
      allow create, delete: if request.auth != null && request.auth.uid == userId;
    }
   match /feedback/{feedbackId} {
 		 allow create: if true;
 		 allow read, update, delete: if request.auth != null && request.auth.uid == resource.data.listOwnerId;
    }
  }
}
