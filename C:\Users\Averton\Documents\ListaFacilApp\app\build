    }

    compileOptions {
        sourceCompatibility JavaVersion.VERSION_17
        targetCompatibility JavaVersion.VERSION_17
    }

    signingConfigs {
        release {
            storeFile file('C:\\Users\\Averton\\Documents\\ListaFacilApp\\android.keystore')
