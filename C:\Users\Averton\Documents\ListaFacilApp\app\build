trustedWebActivity {
    host "lista-de-limpeza-facil.vercel.app"
    display "standalone"
    themeColor "#F5F5F5"
    themeColorDark "#101D24"
    navigationColor "#F5F5F5"
    navigationColorDark "#101D24"
    navigationDividerColor "#F5F5F5"
    navigationDividerColorDark "#101D24"
    backgroundColor "#F5F5F5"
    enableNotifications true
    startUrl "/"
    iconUrl "https://lista-de-limpeza-facil.vercel.app/images/placeholder-icon.png"
    splashScreenFadeOutDuration 300
    orientation "portrait"
}

// Adiciona configuração para o compilador Java usar menos memória.
// Isso resolve o erro "Could not reserve enough space for object heap".
tasks.withType(JavaCompile) {
    options.fork = true
    options.forkOptions.jvmArgs += ["-Xmx1024m"]
}
